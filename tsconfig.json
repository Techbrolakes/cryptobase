{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/common/*": ["components/common/*"],
      "@/blocks/*": ["components/blocks/*"],
      "@/animations/*": ["animations/*"],
      "@/layouts/*": ["layouts/*"],
      "@/themeConstants/*": ["constants/*"],
      "@/services/*": ["config/services/*"],
      "@pages/*": ["pages/*"],
      "@config/*": ["config/*"],
      "@/icons": ["icons/index.ts"],
      "@/configConstants": ["config/constants.tsx"],
      "@logger": ["logger.config"],
      "@theme": ["theme.ts"],
      "@tests/*": ["tests/*"],
      "@mocks/*": ["__mocks__/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/index.jsx", "pages/_document.jsx"],
  "exclude": ["node_modules"]
}
