{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/common/*": ["components/common/*"],
      "@/layouts/*": ["components/layouts/*"],
      "@/pageComponents/*": ["components/pageComponents/*"],
      "@/services/*": ["config/services/*"],
      "@pages/*": ["pages/*"],
      "@config/*": ["config/*"],
      "@logger": ["logger.config"],
      "@theme": ["theme.ts"],
      "@tests/*": ["__tests__/*"],
      "@mocks/*": ["__mocks__/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/index.jsx", "pages/_document.jsx"],
  "exclude": ["node_modules"]
}
